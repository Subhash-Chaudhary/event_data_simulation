# Environment configuration template for Event Camera Simulation
# Copy this file to .env and customize the values for your setup

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Event detection threshold (3-50, default: 15)
# Lower values = more sensitive detection, higher values = less noise
EVENT_THRESHOLD=15

# Maximum frames to process per video (default: 300)
# Reduce for faster processing, increase for complete analysis
MAX_FRAMES=300

# Time window for event accumulation in milliseconds (default: 30.0)
# Shorter windows = higher temporal precision, longer = smoother visualization
TIME_WINDOW_MS=30.0

# Maximum events per frame to prevent memory overflow (default: 5000)
MAX_EVENTS_PER_FRAME=5000

# Enable multi-scale processing for small object detection (true/false)
ENABLE_MULTI_SCALE=true

# Apply motion boosting for fast-moving objects (true/false)
MOTION_BOOST_ENABLED=true

# Realistic noise level (0.0-0.1, default: 0.01)
NOISE_LEVEL=0.01

# =============================================================================
# VIDEO PROCESSING CONFIGURATION
# =============================================================================

# Output video frame rate (default: 30)
OUTPUT_FPS=30

# Maximum video file size in MB (default: 500)
MAX_VIDEO_SIZE_MB=500

# Default video codec (mp4v, XVID)
DEFAULT_CODEC=mp4v

# Fallback codec if primary fails
FALLBACK_CODEC=XVID

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================

# Event decay factor for temporal visualization (0.0-1.0, default: 0.85)
# Higher values = longer event persistence, lower = faster fade
DECAY_FACTOR=0.85

# Glow radius for event visualization (1-5, default: 2)
GLOW_RADIUS=2

# Color intensity levels (0-255)
INTENSITY_HIGH=255
INTENSITY_MEDIUM=200
INTENSITY_LOW=150

# Visibility threshold for event display (default: 15)
VISIBILITY_THRESHOLD=15

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Output directory for all generated files
OUTPUT_DIRECTORY=output

# Default filenames for outputs
CSV_FILENAME=events.csv
VIDEO_FILENAME=event_video.mp4
HEATMAP_FILENAME=activity_heatmap.png
ANALYSIS_FILENAME=analysis_report.png

# Figure generation settings
DPI=300
FIGURE_WIDTH=12
FIGURE_HEIGHT=8

# =============================================================================
# DEVELOPMENT AND DEBUG SETTINGS
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode for additional logging
DEBUG_MODE=false

# Enable performance profiling
ENABLE_PROFILING=false

# Enable memory monitoring
MONITOR_MEMORY=false